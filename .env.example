# ============================================
# AgentSphere-AI Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive data!

# ============================================
# JWT Configuration (REQUIRED for API)
# ============================================
# Secret key for JWT tokens - change this in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# JWT Algorithm (default: HS256)
JWT_ALGORITHM=HS256

# Access token expiry in minutes (default: 15)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# Refresh token expiry in days (default: 7)
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# App Configuration
# ============================================
APP_NAME=AgentSphere-AI
APP_VERSION=2.0.0

# Enable debug mode (set to false in production)
DEBUG=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ============================================
# HITL (Human-in-the-Loop) Configuration
# ============================================
# Timeout for HITL approval requests in seconds (default: 5 minutes)
HITL_REQUEST_TIMEOUT_SECONDS=300

# ============================================
# OAuth Configuration (Optional)
# ============================================
# For Gmail, YouTube, Google Drive OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# For Zoho OAuth
ZOHO_CLIENT_ID=your-zoho-oauth-client-id
ZOHO_CLIENT_SECRET=your-zoho-oauth-client-secret

# ============================================
# AI/LLM Provider Configuration
# ============================================

# LLM Provider Selection
# Options: openai, google, anthropic, groq
# Default: openai
LLM_PROVIDER=openai

# Model Configuration
# Examples: gpt-4o, gpt-4-turbo, gemini-2.0-flash-exp, claude-3-5-sonnet-20241022, llama-3.3-70b-versatile
MODEL_NAME=gpt-4o

# Maximum tokens for LLM responses
MAX_TOKENS=100000

# API Keys for AI Providers
# Get your keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Google AI: https://aistudio.google.com/app/apikey
# - Anthropic: https://console.anthropic.com/settings/keys
# - Groq: https://console.groq.com/keys

OPENAI_API_KEY=sk-proj-your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GROQ_API_KEY=your-groq-api-key-here

# ============================================
# Database Configuration
# ============================================

# PostgreSQL Connection String
# Format: postgresql+asyncpg://username:password@host:port/database
# Example: postgresql+asyncpg://postgres:root@localhost:5432/agentsphere
DATABASE_URL=postgresql+asyncpg://postgres:root@localhost:5432/agentsphere

# Database Connection Pool Settings
# Recommended: 20 for pool size, 10 for overflow
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# ============================================
# Tenant Configuration
# ============================================

# Default Tenant (for CLI and local development)
# These values are automatically created by the Alembic migration
# You can use these for local testing without running init scripts
DEFAULT_TENANT_ID=default
DEFAULT_TENANT_API_KEY=dev_api_key_12345

# ============================================
# Session & Checkpointer Settings
# ============================================

# How long to keep conversation checkpoints (in days)
CHECKPOINT_TTL_DAYS=30

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# Auto-save interval in seconds
AUTO_SAVE_INTERVAL=30

# ============================================
# External API Keys
# ============================================

# SerpAPI - For web search functionality
# Get your key from: https://serpapi.com/manage-api-key
SERPAPI_API_KEY=your-serpapi-key-here

# ============================================
# MCP Server Configurations
# ============================================

# --- GitHub MCP ---
# Personal Access Token for GitHub operations
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_MCP_TOKEN=ghp_your-github-personal-access-token
GITHUB_USERNAME=your-github-username
GITHUB_DEFAULT_REPO=your-default-repo-name

# --- Figma MCP ---
# Personal Access Token for Figma operations
# Create at: https://www.figma.com/developers/api#access-tokens
FIGMA_MCP_TOKEN=figd_your-figma-personal-access-token

# --- Discord MCP ---
# Discord account credentials for bot operations
# IMPORTANT: Use a dedicated bot account, not your personal account
DISCORD_EMAIL=your-discord-bot-email@example.com
DISCORD_PASSWORD=your-discord-bot-password

# Run Discord in headless mode (no browser UI)
# Options: true, false
DISCORD_HEADLESS=true

# Comma-separated list of Discord Guild (Server) IDs to monitor
# Leave empty to monitor all guilds
# Example: 123456789012345678,987654321098765432
DISCORD_GUILD_IDS=

# Maximum number of messages to fetch per channel
MAX_MESSAGES_PER_CHANNEL=200

# Default time range for message retrieval (in hours)
DEFAULT_HOURS_BACK=24

# --- Google Drive MCP ---
# Path to OAuth credentials JSON file
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Required scopes: https://www.googleapis.com/auth/drive
GOOGLE_DRIVE_OAUTH_CREDENTIALS=C:/path/to/your/oauth-credentials.json

# --- Notion MCP ---
# Notion Integration Token
# Create integration at: https://www.notion.so/my-integrations
# Required capabilities: Read content, Update content, Insert content
NOTION_TOKEN=ntn_your-notion-integration-token

# --- YouTube MCP ---
# YouTube Data API v3 Key
# Get your key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key

# ============================================
# Development & Debugging
# ============================================

# Set to true to enable SQL query logging
# WARNING: This will log all SQL queries, including sensitive data
# SQL_ECHO=false

# Set to true to enable verbose MCP client logging
# MCP_DEBUG=false
